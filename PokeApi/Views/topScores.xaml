<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokeApi.Views.topScores"
             Title="Top Scores"
             xmlns:local="clr-namespace:PokeApi.ViewModels">

    <ContentPage.BindingContext>
        <local:topScoresVM />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="ðŸŽ® Top Scores" 
               FontSize="28" 
               HorizontalOptions="Center" 
               FontAttributes="Bold" />
        <ActivityIndicator IsRunning="{Binding ActivityIndicator}" IsVisible="{Binding ActivityIndicator}"/>
        <CollectionView ItemsSource="{Binding Puntuaciones}" 
                        SelectionMode="None"
                        EmptyView="No hay puntuaciones disponibles.">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="15" Margin="0,5" CornerRadius="10" BackgroundColor="#f0f0f0" HasShadow="True">
                        <Grid ColumnDefinitions="*, Auto" VerticalOptions="Center">

                            <Label Text="{Binding NombreJugador}" 
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"/>

                            <Label Text="{Binding Puntuacion}" 
                                   FontSize="18"
                                   FontAttributes="Italic"
                                   TextColor="#4CAF50"
                                   HorizontalOptions="End"
                                   VerticalOptions="Center"
                                   Grid.Column="1"/>

                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
